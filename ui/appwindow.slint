import { Button, VerticalBox,HorizontalBox, StandardTableView } from "std-widgets.slint";

export struct DivaModConfig {
    enabled: bool,
    include: [string],
    name: string,
    descrition: string,
    version: string,
    author: string,
    date: string,
    dll: [string]
}


export component App inherits Window {
    min-width: 1280px;
    min-height: 720px;
    title: "Rust4Diva: Project Diva MM+ Mod Manager";
    in property <int> counter: 4;
    // in property <Array<int>> fs: [4,3,2];
    in property <[int]> fs: [1,2,3];
    in property <[DivaModConfig]> mods: [];
    in property <[[StandardListViewItem]]> stuff;
    property window_width <=> self.width;
    property window_height <=> self.height;
    callback clicked <=> btn.clicked;
    callback add-mod;
    VerticalBox {
        StandardTableView {
            min-width: window_width - 12px;
            height: window_height - 200px;
            columns: [
                { title: "Enabled"},
                { title: "Name"},
                { title: "Authors"},
                { title: "Version"},
                { title: "Description"}
             ];
            rows: stuff;
        }
        btn := Button {
            text: "Load Mods";

        }
    }
}